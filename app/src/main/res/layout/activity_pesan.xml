<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PesanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingEnd="16dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/backimg"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/arrow_left"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="30dp"/>
                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/logoitem" />
                    <ImageView
                        android:id="@+id/img_kangcukur"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:layout_toLeftOf="@id/logo"
                        android:layout_marginTop="15dp"
                        android:foregroundGravity="center"
                        android:src="@drawable/textbiru" />
                    <TextView
                        android:id="@+id/slogan"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Mari Kita Cukur"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_below="@id/img_kangcukur"
                        android:layout_toLeftOf="@id/logo"
                        android:textAlignment="center"
                        />
                </RelativeLayout>
            </com.google.android.material.appbar.MaterialToolbar>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:text="Pesan KangCukur"
                android:textColor="@color/blue_600"
                android:textSize="24sp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_round_top"
            android:backgroundTint="@color/blue_600">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/btn_Bottom"
                android:paddingHorizontal="20dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_pemesan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginVertical="10dp"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="10dp">
                                <TextView
                                    android:id="@+id/order_pemesan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="Nama pemesan"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="10dp"
                                android:layout_marginStart="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text=":"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                            </LinearLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:endIconDrawable="@drawable/ic_clear"
                                app:endIconMode="clear_text"
                                app:prefixTextColor="@color/black"
                                app:startIconTint="@color/blue_600">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_namapemesan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:inputType="text"
                                    android:hint="Masukkan tanggal (DD-MM-YYYY)"
                                    android:textColorHint="@color/semi_black" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_ordertgl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginVertical="10dp"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="10dp">
                                <TextView
                                    android:id="@+id/order_tanggal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="Tanggal pesan"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="10dp"
                                android:layout_marginStart="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text=":"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                            </LinearLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:endIconDrawable="@drawable/ic_clear"
                                app:endIconMode="clear_text"
                                app:prefixTextColor="@color/black"
                                app:startIconTint="@color/blue_600">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_tanggalorder"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:inputType="date"
                                    android:hint="Masukkan tanggal (DD/MM/YYYY)"
                                    android:textColorHint="@color/semi_black" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_ordernama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginVertical="10dp"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="10dp">
                                <TextView
                                    android:id="@+id/order_nama"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="Nama KangCukur"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="10dp"
                                android:layout_marginStart="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text=":"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                            </LinearLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:endIconDrawable="@drawable/ic_clear"
                                app:endIconMode="clear_text"
                                android:layout_marginStart="5dp"
                                app:startIconTint="@color/blue_600">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_ordernama"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:inputType="text"
                                    android:hint="Nama KangCukur"
                                    android:textColorHint="@color/semi_black" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_orderpaket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginVertical="10dp"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="135dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="10dp">
                                <TextView
                                    android:id="@+id/order_paket"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text="Pilihan paket"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginVertical="10dp"
                                android:layout_marginStart="10dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:text=":"
                                    android:textSize="16sp"
                                    android:layout_marginStart="5dp"/>
                            </LinearLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:endIconDrawable="@drawable/ic_clear"
                                app:endIconMode="clear_text"
                                android:layout_marginStart="5dp"
                                app:prefixText="Paket "
                                app:prefixTextColor="@color/black"
                                app:startIconTint="@color/blue_600">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/et_orderpaket"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:inputType="text"
                                    android:hint="Masukkan paket"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/semi_black" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:id="@+id/btn_Bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_round_top"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPesan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:minHeight="56dp"
                    android:text="Pesan"
                    android:textAllCaps="false"
                    app:cornerRadius="24dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>